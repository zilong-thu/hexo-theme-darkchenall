@import 'nib'

/* 定义一些变量 */
mainBgColor = #272822
darkerBgColor = #1E1F1A
borderColor = #666

@media (min-width: 992px)
  .affix,.affix-bottom
    width: 213px;
  .affix
    position: fixed;
    top: 80px;
  .affix-bottom
    position: absolute;
  .affix-bottom,.affix,.affix-top
    margin-top: 0;
    margin-bottom: 0;
    left: 10px;
.pull-left
  float: left !important
.pull-right
  float: right !important

h1,h2,h3,h4,h5,h6
  font-weight: 500;
  padding-bottom 10px
h1, .h1
  margin-top: 10px;
  font-size: 28px
h2, .h2
  font-size: 26px
h2.category
  color: #8AC763
h3, .h3
  font-size: 24px
h4, .h4
  font-size: 22px
h5, .h5
  font-size: 20px
h6, .h5
  font-size: 18px

.carousel-control
  .fa
    position absolute
    top: 50%
    z-index: 5
    display: inline-block
.tags a 
   margin-left: 2px;
   padding: 0.3em 0.6em 0.2em 0.6em;
   font-weight: normal;
  
body 
  padding-top: 50px;
  background-color: #34352E;
  font-size: 16px;
  color: #dedede;

.widget
  .list-group
    margin-bottom 0px
  ul
    >li
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    >a
      text-overflow: ellipsis;
   .icon:before
     content: '\f069';
     color: #4141e9;
     font: 12px FontAwesome;

article
  header
    margin-bottom: 5px;
    .title
      margin-bottom: 0;
      overflow: hidden;
      overflow-wrap: break-word;
      color: #fff;
    span
      color: #999;
      font-size: 14px;
    .fa
      margin-right: 10px;
  .post .icon:before 
    content: '\f15c';
  .comment .icon:before 
    content: '\f086';
  .photo .icon:before 
    content: '\f030';
  .link
    .icon:before 
      content: '\f0c1';
    .title a:after 
      content: '\f08e';
      color: #999;
      font: 12px FontAwesome;
      padding-left: 10px;
      vertical-align: super;
  video,img 
    min-width: 0%;
    max-width: 100%;
    height: auto;
    border: none;
    border-radius: 5px;
  .entry
    hr 
      border-top: 1px solid borderColor
      padding-top: 0;
      margin-top: 0;
    h1, h2, h3, h4, h5, h6
      text-shadow: 1px 1px #000;
      font-weight: normal;
      color: #fff;
      
    blockquote
      footer
        cite before
        content "—"
        padding 0 0.3em
    code
      white-space: pre
      word-wrap:break-word
      overflow:auto
      color: #03E003;
      background-color: darkerBgColor;
      margin-left: 0.2em;
      margin-right: 0.2em;
    .img_block
      display: block
      position: relative
      .caption
        display: none
        position: absolute
        top: 0
        color: #fff
  .categories .breadcrumb 
    padding: 5px 5px;
    margin-bottom: 0px;
  .categories .breadcrumb>li+li:before 
    padding: 0px 2px;
    content: '/';
  footer
    margin-top: 5px;
    padding-top: 5px;
    border-top: 1px solid
    border-color: borderColor;
    color: #999;
    font-size: 14px;
  a.more-link
    padding: 8px 10px;
    margin-bottom: 10px;
    border-radius: 2em;
    text-decoration: none;
    background-color: #fff;
  a.more-link:active
    box-shadow:1px 1px 10px rgba(0,0,0,0.7) inset;

/* 侧边栏 */
#sidebar
  .list-group-item:first-child
    border-top-left-radius: 0;
    border-top-right-radius: 0;
#widget_tagcloud
  .tagcloud .entry>a 
    padding: 3px 5px;
    display: inline-block;
    text-decoration: none;
    border-radius: 4px;
    &:hover
      background-color: darkerBgColor;
      color: #f5a10d !important;
  .tagcloud .panel-body
    padding: 10px;
    border: 1px solid darkerBgColor;
    border-radius: 0 0 5px 5px;
#widget_category
  li.list-group-item
    padding: 0;
    a
      padding: 10px 15px;

#tooltip
  position:absolute;
  z-index:1000;
  word-wrap:break-word;
  background:#000;
  text-align:left;
  padding:5px;
  min-height:1em;
  -moz-border-radius:5px;
  -khtml-border-radius:5px;
  -webkit-border-radius:5px;
  border-radius:5px;
  p
    color:#F9F9F9;
    font-size:12px
  em
    display:block;
    margin-top:3px;
    color:#F60;
    font-style:normal;

/* 覆盖bootstrap.css 样式*/
.navbar-inverse
  border-color: #000;
  box-shadow: 0 1px 20px rgba(0,0,0,0.5);
  background-color: #272822;
  .navbar-brand
    color: #8ac763;
    font-weight: bold;
    &:hover
      color: #56CA0C;
  .navbar-toggle
    border-color: #999;
    background-color: darkerBgColor;
  .navbar-toggle.collapsed
    border-color: darkerBgColor;
    background-color: mainBgColor;
a
  transition: color 0.4s, background-color 0.4s, text-decoration 0.4s;
a:hover
  color: #75B0FD;
.page-header
  border-bottom: none;
  h1
    color: #8ac763;
    font-size: 32px
.well
  background-color: mainBgColor;
  border: none;
  box-shadow: none;
  padding: 10px 18px;
  margin-bottom: 30px;
.breadcrumb
  background-color: transparent;
.breadcrumb>li
  padding-left: 3px;
.pager li>a, .pager li>span
  background-color: #254;
  border: 1px solid #000;
  border-radius: 2em;
.pager li>a
  &:hover
    background-color: #338B6D;
    color: #fff;
.panel-primary>.panel-heading
  background-color: darkerBgColor;
  border:none;
  text-align: center;
  color: #fff;
.widget ul >li
  background-color: mainBgColor;
.panel
  border: none;
  background-color: mainBgColor;
#widget_category .list-group-item
 &:hover
    background-color: #3e3e3e;
.list-group-item
  border-color: darkerBgColor;
  background-color: mainBgColor;
  a
    display: block;
    &:hover
      text-decoration: none;
.badge
  font-size: 14px;
  background-color: #02856B;
  margin-top: 10px;
  margin-right: 15px;
textarea
  background-color: #3d3d3d !important;
  color: #fff !important;

strong
  color: orange;
  font-size: 1.05em;
  text-shadow: 1px 1px 1px #000;
.dropdown-menu
  background-color: darkerBgColor;
.dropdown-menu>li>a
  color: #ddd;

figure
  margin-bottom: 10px;
  figurecaption
    font-size: 0.9em;

/*代码高亮*/
pre
  font-size: 16px;
  background: darkerBgColor;
pre.prettyprint
  border: none;
  background: darkerBgColor;
figcaption
  text-align: center;
.highlight
  figcaption
    background-color: darkerBgColor;
    border-bottom: 1px solid mainBgColor;
    border-radius: 5px 5px 0 0;
    padding: 6px 0;
  pre
    border-radius: 5px;


/* 页脚 */
#footer
  background-color: darkerBgColor;
  width: 100%;
  margin: 50px 0 0 0;
  padding: 50px 30px;
  .panel-footer
    background-color: darkerBgColor;
    color: #ccc;
    border: none;
  .panel
    border: none;
    background-color: darkerBgColor;
    box-shadow: none;


.well
  blockquote
    font-family: "PT Serif",Georgia,Times,"Times New Roman",KaiTi_GB2312,KaiTi,STKaiti,FangSong,STFangsong,serif;
    color: #8AC763;
    border: none;
    border-top: 1px solid #4D7633;
    border-bottom: 1px solid #4D7633;

/*字体设置*/
body, h1, h2, h3, h4, h5, h6
  font-family:"Helvetica Neue", Arial, "Microsoft YaHei",SimHei,"LiHei Pro Medium",STXihei, sans-serif;


/* font awesome*/
.fa.pull-left
  margin-top: 0.2em;

/* img filters */
.img-invert
  -webkit-filter: invert(0.9)

/* first character of a paragraph */
span.first
  float: left;
  display: inline-block;
  color: #FFFFFF;
  font-size: 1.9em;
  line-height: 1;
  padding: 0.2em;
  background: #02856B;
  margin-right: 0.3em;
  text-shadow: 1px 1px 3px #000;


/* pagination */
.pagination>li>a,
.pagination>li>span
  background-color: #F17A1E;
  border: 1px solid #272822;
  color: #272822;

.pagination>li>a:focus,
.pagination>li>a:hover,
.pagination>li>span:focus,
.pagination>li>span:hover
  background-color: #DD6202;
  border-color: #272822;

.pagination>.active>a, .pagination>.active>a:focus, .pagination>.active>a:hover, .pagination>.active>span, .pagination>.active>span:focus, .pagination>.active>span:hover
  background-color: #272822;
  border-color: #272822;

